@using Soulfix.Controllers;
@using System.Globalization;
@using Soulfix.Metods;
@using System.Collections;
@model EventModel;

@{
	ViewData["Title"] = "Atualizar Evento";

}
<style>
	.form-group {
		padding: 10px;
	}

	.field-validation-error {
		color: #e01d1d;
	}
</style>
<h1>@ViewData["Title"]</h1>

<form asp-controller="Event" asp-action="Update" asp-route-id="@Model.Id" method="post">
	<br />
	<button type="submit" class="btn btn-primary">Salvar</button>
	<a type="button" class="btn btn-danger " asp-controller="Event" asp-action="Index">Cancelar</a>
	<br />
	<br />

	<div class="form-group w-100">
		<label for="exampleInputName">Nome do Evento</label>
		<input asp-for="Name" type="text" class="form-control" id="exampleInputName" aria-describedby="" placeholder="Nome do Evento">
		

	</div>


	<div class="form-row " style="display:flex">
		<div class="form-group col-md-6">
			<label for="exampleInputDescripition">Descrição</label>
			<textarea type="text-area" asp-for="Description" class="form-control" id="exampleInputDescripition" aria-describedby="" placeholder="Descrição"></textarea>
			
		</div>

		<div class="form-group col-md-6">
			<label for="exampleInputEmail">Data</label>
			<input asp-for="Date" type="datetime-local" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Data do evento">
			

		</div>

	</div>


	<div class="form-row " style="display:flex">
		<div class="form-group col-6">
			<label for="exampleInputCategory">Categorias</label>
			@{
				var teste = (IEnumerable)TempData["listCategoryName"];
			}
			<select asp-for="CategoryId" class="form-control" id="exampleInputCategory"  asp-items='new SelectList(teste,"Id", "Name",Model.CategoryId)'>
				@* <option value="10000" selected>
					Selecione uma opção...
				</option> *@
			</select>


		</div>





	</div>


</form>


