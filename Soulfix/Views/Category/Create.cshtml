@using Soulfix.Controllers;
@using System.Globalization;
@using Soulfix.Metods; 
@model CategoryModel;

@{
	ViewData["Title"] = "Nova Categoria";

}
<style>
    .form-group{
        padding:10px;
    }
    .field-validation-error{
        color:#e01d1d;
    }
</style>
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Client" asp-action="Create" method="post">
    <br />
    <button type="submit" class="btn btn-primary" >Salvar</button>
    <a type="button" class="btn btn-danger " asp-controller="Client" asp-action="Index">Cancelar</a>
    <br />  
    <br />  

    <div class="form-group w-100">
        <label for="exampleInputName">Nome</label>
        <input asp-for="Name"  class="form-control" id="exampleInputName" aria-describedby="" placeholder="Nome">
        @Html.ValidationMessageFor(x => x.Name)
        
    </div>
   

    <div class="form-row " style="display:flex">
    <div class="form-group col-md-6">
        <label for="exampleInputTelefone">Cor</label>
            <input asp-for="Color" type="color" class="form-control" id="exampleInputTelefone" aria-describedby="" placeholder="Cor">
            @Html.ValidationMessageFor(x => x.Color)
    </div>
 
    <div class="form-group col-md-6">
        <label for="exampleInputEmail">Usuário</label>
            <input asp-for="IdOwner" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Usuário Responsável">
            @Html.ValidationMessageFor(x => x.IdOwner)
     
    </div>

    </div>
   
    </form>


