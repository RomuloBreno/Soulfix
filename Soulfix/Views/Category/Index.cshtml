@using Soulfix.Controllers;
@model List<CategoryModel>

@{
    ViewData["Title"] = "Categorias";

}

<style>
    .div-table > thead > tr>td,th {
        padding:10px;
    }
    table{
        margin:10px;
        border-radius:10%;
    }
    .Category-view{
        display:flex;
        grid-auto-columns:fit-content();
    }
</style>

<div class="container flex-column ">
    <main role="main" class="pb-3">
        <h1>@ViewData["Title"]</h1>


        <input type="text" class="" placeholder="Pesquisar" />
        <div class="Category-view">
            

                @{

                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {
        <br />

                        

                        <table class="div-table table-hover">
                            <thead class="">

                               <tr>
                            <th scope="col"># @item.Id</th>
                            <th scope="col"> 
                            
                                        <div style="background-color:@item.Color; color:white; width:50px; height:50px; border-radius:100px" class="border"></div>
                            
                            </th>
                            <th scope="col">
                                Nome: @item.Name
                            </th>
                               </tr>                             

                              
                            </thead>
                            <tbody>

                            <tr>
                                
                            </tr>

            </tbody>
        </table>
      


                        }

                    }
                }
        </div>

        <br />

        <a class="btn btn-primary" asp-action="Create" role="button">Adicionar Novo</a>
        @{
            IgnoreBody();
        }
    </main>
</div>




